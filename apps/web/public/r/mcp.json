{
  "$schema": "https://ui.shadcn.com/schema/registry-item.json",
  "name": "mcp",
  "type": "registry:file",
  "title": "MCP for Airdrop",
  "description": "MCP for Airdrop Inita mapping and shadcn registry",
  "dependencies": [],
  "registryDependencies": [],
  "files": [
    {
      "path": "registry/default/mcp/mcp.json",
      "content": "{\n  \"mcpServers\": {\n    \"airdrop\": {\n      \"command\": \"chef-cli\",\n      \"args\": [\"mcp\", \"initial-mapping\"]\n    },\n    \"shadcn\": {\n      \"command\": \"npx\",\n      \"args\": [\"-y\", \"shadcn@canary\", \"registry:mcp\"],\n      \"env\": {\n        \"REGISTRY_URL\": \"http://localhost:3000/r/registry.json\"\n      }\n    },\n    \"codegen\": {\n      \"command\": \"npx\",\n      \"args\": [\"mcp-remote\", \"http://localhost:3000/api/mcp\"]\n    }\n  }\n}\n",
      "type": "registry:file",
      "target": "~/.cursor/mcp.json"
    }
  ]
}